<html lang='en'>

<head>
    <meta charset='utf-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>CYBERlog</title>
    <link rel='stylesheet' type='text/css' href='/css/style.css' />
    <script src="https://kit.fontawesome.com/f03e09604d.js" crossorigin="anonymous"></script>
</head>

<body>
    <header>
        <nav class="navBar">
            <div class="navContent">
                <div>
                    <p class="logo">CYBERlog
                        <span class="microchip">
                            <i class="fa-solid fa-microchip"></i>
                        </span>
                    </p>
                </div>
                <div>
                    <ul class="navLinks">
                        <div class="navMenu">
                            <li class="home"><a href='/'>Home</a></li>
                            <li class="submitBlog"><a href='/profile'>Blog About It</a></li>
                            {{#if logged_in}}
                            <li class="profile"><a href='/profile'>Profile</a></li>
                            <li class="logOut">Logout</li>
                            {{else}}
                            <li class="logIn"><a href='/login'>Log In</a></li>
                            <li class="createAccount"><a href='/createAccount'>Create Account</a></li>
                            {{/if}}
                        </div>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main>
        {{{body}}}
    </main>
    <footer>
        <div class="footerContent">
            <h1>CYBERlog</h1>
            <p>CopyRight &copy;2022 <a href='#'>CYBERlog</a></p>
        </div>
    </footer>
    {{#if logged_in}}
    <script src="/js/logout.js"></script>
    <script src="/js/login.js"></script>
    {{/if}}
</body>

</html>